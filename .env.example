# CanvasAI Environment Configuration
# Copy this file to .env.development for local development

# ===== Frontend Configuration =====
# Vite will only expose variables prefixed with VITE_

# API Gateway URL (will be output by CDK deployment)
VITE_API_URL=http://localhost:3000/dev

# AWS Region
VITE_AWS_REGION=us-east-1

# Cognito User Pool ID (will be output by CDK deployment)
VITE_USER_POOL_ID=us-east-1_XXXXXXXXX

# Cognito User Pool Client ID (will be output by CDK deployment)
VITE_USER_POOL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX

# ===== Backend Configuration =====
# These are only used by Lambda functions (not exposed to frontend)

# OpenAI API Key (required for DALL-E and GPT-4)
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# DynamoDB Table Names (will be set automatically by CDK)
DYNAMODB_PROJECTS_TABLE=CanvasAI-Projects-dev
DYNAMODB_ANALYTICS_TABLE=CanvasAI-Analytics-dev

# S3 Bucket for Image Storage (will be set automatically by CDK)
S3_IMAGES_BUCKET=canvasai-images-dev

# CloudFront Distribution URL (optional, will be output by CDK)
CLOUDFRONT_DOMAIN=d123456789.cloudfront.net

# ===== AWS Deployment Configuration =====
# Used for CDK deployment

# AWS Account ID
AWS_ACCOUNT_ID=123456789012

# AWS Region for Deployment
AWS_REGION=us-east-1

# Environment Name (dev, staging, prod)
ENVIRONMENT=dev

# ===== Optional Configuration =====

# Lambda Memory Allocation (MB)
LAMBDA_MEMORY_SIZE=512

# Lambda Timeout (seconds)
LAMBDA_TIMEOUT=30

# Generation Lambda Memory (MB) - needs more for OpenAI calls
GENERATION_LAMBDA_MEMORY=1024

# Generation Lambda Timeout (seconds)
GENERATION_LAMBDA_TIMEOUT=60

# Enable Debug Logging
DEBUG=false

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
